<Extensions>
  <Version>1.8</Version>
  <Panel>
    <Order>1</Order>
    <PanelId>panel_store</PanelId>
    <Origin>local</Origin>
    <Type>Statusbar</Type>
    <Icon>Lightbulb</Icon>
    <Color>#FFB400</Color>
    <Name>Store</Name>
    <ActivityType>Custom</ActivityType>
    <Page>
      <Name>Eclairage</Name>
      <Row>
        <Name>Allumer / Eteindre éclairage </Name>
        <Widget>
          <WidgetId>lightButton</WidgetId>
          <Type>ToggleButton</Type>
          <Options>size=1</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Activation automatique</Name>
        <Widget>
          <WidgetId>widget_21</WidgetId>
          <Name>Activation de l'éclairage quand une personne ou plus est détecté</Name>
          <Type>Text</Type>
          <Options>size=3;fontSize=small;align=left</Options>
        </Widget>
        <Widget>
          <WidgetId>autoLightButton</WidgetId>
          <Type>ToggleButton</Type>
          <Options>size=1</Options>
        </Widget>
      </Row>
      <Options/>
    </Page>
    <Page>
      <Name>Stores électriques</Name>
      <Row>
        <Name>Activation automatique </Name>
        <Widget>
          <WidgetId>widget_22</WidgetId>
          <Name>Activation des stores quand un appel est détecté</Name>
          <Type>Text</Type>
          <Options>size=3;fontSize=small;align=left</Options>
        </Widget>
        <Widget>
          <WidgetId>storeAutoButton</WidgetId>
          <Type>ToggleButton</Type>
          <Options>size=1</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Controle des stores</Name>
        <Widget>
          <WidgetId>storeUpDown</WidgetId>
          <Type>Spinner</Type>
          <Options>size=2</Options>
        </Widget>
      </Row>
      <Row>
        <Name/>
        <Widget>
          <WidgetId>storeFullDown</WidgetId>
          <Name>Tout Baisser</Name>
          <Type>Button</Type>
          <Options>size=2</Options>
        </Widget>
        <Widget>
          <WidgetId>storeFullUp</WidgetId>
          <Name>Tout Lever</Name>
          <Type>Button</Type>
          <Options>size=2</Options>
        </Widget>
      </Row>
      <Options/>
    </Page>
    <Page>
      <Name>Climatisation</Name>
      <Row>
        <Name>Information sur la salle :</Name>
        <Widget>
          <WidgetId>widget_temp_label</WidgetId>
          <Name>Température</Name>
          <Type>Text</Type>
          <Options>size=2;fontSize=normal;align=left</Options>
        </Widget>
        <Widget>
          <WidgetId>widget_17</WidgetId>
          <Type>Spacer</Type>
          <Options>size=1</Options>
        </Widget>
        <Widget>
          <WidgetId>widget_actual_temp</WidgetId>
          <Name>- °C</Name>
          <Type>Text</Type>
          <Options>size=1;fontSize=normal;align=center</Options>
        </Widget>
        <Widget>
          <WidgetId>widget_humidity_label</WidgetId>
          <Name>Humidité </Name>
          <Type>Text</Type>
          <Options>size=2;fontSize=normal;align=left</Options>
        </Widget>
        <Widget>
          <WidgetId>widget_20</WidgetId>
          <Type>Spacer</Type>
          <Options>size=1</Options>
        </Widget>
        <Widget>
          <WidgetId>widget_actual_humidity</WidgetId>
          <Name>- %</Name>
          <Type>Text</Type>
          <Options>size=1;fontSize=normal;align=center</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Température cible</Name>
        <Widget>
          <WidgetId>widget_8</WidgetId>
          <Type>Slider</Type>
          <Options>size=3</Options>
        </Widget>
        <Widget>
          <WidgetId>widget_7</WidgetId>
          <Name>21°C</Name>
          <Type>Text</Type>
          <Options>size=1;fontSize=normal;align=center</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Mode</Name>
        <Widget>
          <WidgetId>widget_10</WidgetId>
          <Type>GroupButton</Type>
          <Options>size=4</Options>
          <ValueSpace>
            <Value>
              <Key>1</Key>
              <Name>Arret</Name>
            </Value>
            <Value>
              <Key>2</Key>
              <Name>Auto</Name>
            </Value>
          </ValueSpace>
        </Widget>
      </Row>
      <Options/>
    </Page>
    <Page>
      <Name>BluRay</Name>
      <Row>
        <Name>BluRay</Name>
        <Widget>
          <WidgetId>widget_11</WidgetId>
          <Type>DirectionalPad</Type>
          <Options>size=4</Options>
        </Widget>
        <Widget>
          <WidgetId>widget_13</WidgetId>
          <Type>Button</Type>
          <Options>size=1;icon=play_pause</Options>
        </Widget>
        <Widget>
          <WidgetId>widget_14</WidgetId>
          <Type>Button</Type>
          <Options>size=1;icon=stop</Options>
        </Widget>
        <Widget>
          <WidgetId>widget_12</WidgetId>
          <Type>Button</Type>
          <Options>size=1;icon=skip_bw</Options>
        </Widget>
        <Widget>
          <WidgetId>widget_15</WidgetId>
          <Type>Button</Type>
          <Options>size=1;icon=skip_fw</Options>
        </Widget>
      </Row>
      <Options/>
    </Page>
  </Panel>
</Extensions>
